# Market Liquidity Monitor - Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenRouter API Key (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Logfire Observability (Optional)
LOGFIRE_TOKEN=your_logfire_token_here
LOGFIRE_SERVICE_NAME=market-liquidity-monitor
LOGFIRE_ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mlm

# Redis Cache
REDIS_URL=redis://localhost:6379

# Exchange API Keys (Optional - for authenticated endpoints)
BINANCE_API_KEY=
BINANCE_API_SECRET=
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Application Settings
DEFAULT_EXCHANGE=binance
DEFAULT_MODEL=gpt-4o
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
